{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug nori",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/prt/build/nori",
            "args": [
                "../scenes/prt.xml"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/prt/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "Build nori"
        }
    ]
}